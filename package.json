{
    "name": "obsidian-blogger",
    "version": "1.0.0",
    "description": "Root repository of obsidian blogger",
    "private": false,
    "author": "danpacho",
    "license": "MIT",
    "keywords": [
        "obsidian",
        "blogger",
        "dev-log",
        "obsidian-blog",
        "obsidian-plugin"
    ],
    "type": "module",
    "scripts": {
        "dev": "turbo run build && turbo run dev",
        "build": "pnpm reset:dist && turbo run build --no-cache --force",
        "start": "turbo run start",
        "clean": "turbo run clean",
        "blog": "pnpm run --filter=@obsidian_blogger/template",
        "plugin": "pnpm run --filter=@obsidian_blogger/obsidian_plugin",
        "cli": "pnpm run --filter=create-obsidian-blogger",
        "publisher": "pnpm run --filter=@obsidian_blogger/publish_system",
        "builder": "pnpm run --filter=@obsidian_blogger/build_system",
        "debug:toolbar:enable": "astro preferences enable devToolbar",
        "debug:toolbar:disable": "astro preferences disable devToolbar",
        "test": "FORCE_COLOR=1 vitest",
        "test:watch": "FORCE_COLOR=1 vitest --watch -u",
        "test:coverage": "FORCE_COLOR=1 vitest run --coverage",
        "test:ci": "pnpm build && pnpm prettier && pnpm ts:typecheck && pnpm test:coverage",
        "ts:typecheck": "tsc --noEmit --allowImportingTsExtensions --skipLibCheck --jsx react-jsx",
        "ts:performance": "rimraf ts-perf && tsc --noEmit --generateTrace ts-perf",
        "reset": "pnpm clean && pnpm -r --parallel exec rimraf node_modules dist && rimraf node_modules dist",
        "reset:dist": "pnpm -r --parallel exec rimraf dist",
        "prepublish": "pnpm test:ci && pnpm bench",
        "prettier": "prettier 'packages/**/*.{ts,js,astro}' --check",
        "prettier:fix": "prettier 'packages/**/*.{ts,js,astro}' --write",
        "eslint": "eslint 'packages/**/*.{ts,astro}'",
        "eslint:fix": "eslint --fix 'packages/**/*.{ts,astro}'",
        "pre-commit": "lint-staged",
        "prepare": "husky install",
        "pkg:init": "pnpm test:ci && changeset",
        "pkg:version": "changeset version",
        "pkg:publish": "changeset publish"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.11",
        "@metal-box/type": "^0.2.0",
        "@types/node": "^20.11.20",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vitest/coverage-v8": "^2.1.8",
        "concurrently": "^9.1.1",
        "dotenv": "^16.4.7",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-turbo": "^1.12.4",
        "eslint-plugin-astro": "^0.31.4",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-tailwindcss": "^3.17.5",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.11",
        "prettier": "^3.4.2",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-tailwindcss": "^0.6.9",
        "rimraf": "^6.0.1",
        "ts-expect": "^1.3.0",
        "tsup": "^8.3.5",
        "turbo": "^2.3.3",
        "typescript": "^5.7.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^2.1.8"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "packageManager": "pnpm@9.4.0"
}

{
    "name": "obsidian-blogger",
    "version": "1.0.0",
    "description": "Root repository of obsidian blogger",
    "private": false,
    "author": "danpacho",
    "license": "MIT",
    "keywords": [
        "obsidian",
        "blogger",
        "dev-log",
        "obsidian-blog",
        "obsidian-plugin"
    ],
    "type": "module",
    "scripts": {
        "dev": "turbo run build && turbo run dev",
        "build": "turbo run build",
        "start": "turbo run start",
        "clean": "turbo run clean",
        "blog": "pnpm run --filter=@obsidian_blogger/astro-blog",
        "plugin": "pnpm run --filter=@obsidian_blogger/plugin",
        "cli": "pnpm run --filter=create-obsidian-blogger",
        "publisher": "pnpm run --filter=@obsidian_blogger/publish_system",
        "builder": "pnpm run --filter=@obsidian_blogger/build_system",
        "debug:toolbar:enable": "astro preferences enable devToolbar",
        "debug:toolbar:disable": "astro preferences disable devToolbar",
        "test": "vitest",
        "test:watch": "vitest --watch -u",
        "test:coverage": "vitest run --coverage",
        "test:ci": "pnpm test:coverage && pnpm prettier && pnpm ts:typecheck && pnpm build",
        "ts:typecheck": "tsc --noEmit --allowImportingTsExtensions --skipLibCheck --jsx react-jsx",
        "ts:performance": "rimraf ts-perf && tsc --noEmit --generateTrace ts-perf",
        "reset": "pnpm clean && pnpm -r --parallel exec rimraf node_modules && rimraf node_modules",
        "prepublish": "pnpm test:ci && pnpm bench",
        "prettier": "prettier 'packages/**/*.{ts,js,astro}' --check",
        "prettier:fix": "prettier 'packages/**/*.{ts,js,astro}' --write",
        "eslint": "eslint 'packages/**/*.{ts,astro}'",
        "eslint:fix": "eslint --fix 'packages/**/*.{ts,astro}'",
        "release": "pnpm build && changeset publish",
        "pre-commit": "lint-staged",
        "prepare": "husky install",
        "changeset": "changeset",
        "packages:publish": "changeset publish",
        "packages:version": "changeset version"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@metal-box/type": "^0.2.0",
        "@types/node": "^20.11.20",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vitest/coverage-v8": "^1.3.1",
        "concurrently": "^8.2.2",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-turbo": "^1.12.4",
        "eslint-plugin-astro": "^0.31.4",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-tailwindcss": "^3.14.3",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "prettier-plugin-astro": "^0.13.0",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "rimraf": "^5.0.5",
        "ts-expect": "^1.3.0",
        "tsup": "^8.0.2",
        "turbo": "^2.0.6",
        "typescript": "^5.5.3",
        "vite-tsconfig-paths": "^4.3.1",
        "vitest": "^1.3.1"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "pnpm@9.4.0"
}
